<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="740.0" prefWidth="930.0" style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chess_client.controllers.LoginController">

    <!-- Container chính -->
    <VBox alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="40" left="50" right="50" top="40" />
        </padding>


        <!-- Form đăng nhập -->
        <VBox maxWidth="380.0" prefHeight="650.0" prefWidth="388.0" spacing="20.0" style="-fx-background-color: rgba(255, 255, 255, 0.05); -fx-background-radius: 15; -fx-padding: 30;">
            <effect>
                <javafx.scene.effect.DropShadow color="#00000066" offsetY="5" radius="10" />
            </effect>

            <!-- Logo và tiêu đề -->
            <VBox alignment="CENTER" spacing="15.0">
                <!-- Icon cờ vua (có thể thay bằng ImageView nếu có ảnh) -->
                <Label style="-fx-font-size: 80px; -fx-text-fill: #f5f5f5;" text="♔" />

                <Label styleClass="title" text="CHESS MASTER">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                    <style>
                        -fx-text-fill: #f5f5f5;
                        -fx-font-weight: bold;
                    </style>
                </Label>
            </VBox>


            <!-- Username field -->
            <VBox spacing="8.0">
                <Label style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;" text="Tên đăng nhập" />
                <TextField fx:id="usernameField" prefHeight="45.0" promptText="Nhập tên đăng nhập" style="-fx-background-color: rgba(255, 255, 255, 0.1);                                  -fx-text-fill: #f5f5f5;                                  -fx-prompt-text-fill: #808080;                                  -fx-background-radius: 8;                                  -fx-border-radius: 8;                                  -fx-border-color: transparent;                                  -fx-font-size: 14px;                                  -fx-padding: 10;">
                </TextField>
            </VBox>

            <!-- Password field -->
            <VBox spacing="8.0">
                <Label style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;" text="Mật khẩu" />

                <!-- TextField và PasswordField chồng lên nhau -->
                <StackPane>
                    <TextField fx:id="visiblePasswordField" managed="false" promptText="Nhập mật khẩu" style="-fx-background-color: rgba(255, 255, 255, 0.1);                           -fx-text-fill: #f5f5f5;                           -fx-prompt-text-fill: #808080;                           -fx-background-radius: 8;                           -fx-border-radius: 8;                           -fx-border-color: transparent;                           -fx-font-size: 14px;                           -fx-padding: 10;" visible="false" />
                    <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" style="-fx-background-color: rgba(255, 255, 255, 0.1);                               -fx-text-fill: #f5f5f5;                               -fx-prompt-text-fill: #808080;                               -fx-background-radius: 8;                               -fx-border-radius: 8;                               -fx-border-color: transparent;                               -fx-font-size: 14px;                               -fx-padding: 10;" />
                </StackPane>
            </VBox>


            <!-- Show password & Forgot password -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <CheckBox fx:id="showPasswordCheckbox" onAction="#onShowPasswordClicked" style="-fx-text-fill: #b0b0b0; -fx-font-size: 12px;" text="Hiển thị mật khẩu" />
                <Region HBox.hgrow="ALWAYS" />
                <Hyperlink fx:id="forgotPasswordLink" style="-fx-text-fill: #4a9eff; -fx-font-size: 12px; -fx-underline: false;" text="Quên mật khẩu?" />
            </HBox>

            <!-- Login button -->
            <Button fx:id="loginButton" maxWidth="Infinity" onAction="#onLoginClicked" prefHeight="50.0" style="-fx-background-color: #4a9eff;                           -fx-text-fill: white;                           -fx-font-size: 16px;                           -fx-font-weight: bold;                           -fx-background-radius: 8;                           -fx-cursor: hand;" text="ĐĂNG NHẬP">
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Button>
            <!-- Divider -->
            <HBox alignment="CENTER" spacing="10.0">
                <Separator prefWidth="100.0" style="-fx-background-color: #404040;" />
                <Label style="-fx-text-fill: #808080; -fx-font-size: 12px;" text="hoặc" />
                <Separator prefWidth="100.0" style="-fx-background-color: #404040;" />
            </HBox>

            <!-- Register link -->
            <HBox alignment="CENTER" spacing="5.0">
                <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 13px;" text="Chưa có tài khoản?" />
                <Hyperlink fx:id="registerLink" onAction="#onRegisterLinkClicked" style="-fx-text-fill: #4a9eff; -fx-font-size: 13px; -fx-font-weight: bold; -fx-underline: false;" text="Đăng ký ngay" />
            </HBox>
            <!-- Error message -->
            <Label fx:id="errorLabel" style="-fx-font-size: 12px;" textFill="#ff6b6b" visible="false" wrapText="true" />
        </VBox>


    </VBox>
</AnchorPane>
