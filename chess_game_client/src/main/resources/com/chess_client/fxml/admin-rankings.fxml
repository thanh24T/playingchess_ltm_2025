<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="viewRankings" spacing="15" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Bảng xếp hạng người chơi"
            style="-fx-text-fill: #f5f5f5; -fx-font-size: 16px; -fx-font-weight: bold;" />
    </HBox>

    <TableView fx:id="tblRankings" VBox.vgrow="ALWAYS"
        style="-fx-background-color: rgba(255, 255, 255, 0.05); -fx-background-radius: 10;">
        <columns>
            <TableColumn fx:id="colRank" text="Hạng" prefWidth="60.0" />
            <TableColumn fx:id="colRankUsername" text="Tên đăng nhập"
                prefWidth="140.0" />
            <TableColumn fx:id="colRankDisplayName" text="Tên hiển thị"
                prefWidth="180.0" />
            <TableColumn fx:id="colGamesPlayed" text="Số trận" prefWidth="100.0" />
            <TableColumn fx:id="colWins" text="Thắng" prefWidth="100.0" />
            <TableColumn fx:id="colLosses" text="Thua" prefWidth="100.0" />
            <TableColumn fx:id="colDraws" text="Hòa" prefWidth="100.0" />
            <TableColumn fx:id="colScore" text="Điểm" prefWidth="100.0" />
        </columns>
    </TableView>
</VBox>

