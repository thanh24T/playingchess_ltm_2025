<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="viewGames" spacing="15" prefHeight="500.0" prefWidth="900.0"
    xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Trạng thái:"
            style="-fx-text-fill: #f5f5f5; -fx-font-size: 14px;" />
        <ComboBox fx:id="cmbGameStatus" prefWidth="150.0" />
        <Button fx:id="btnFilterGames" text="Lọc" prefWidth="80.0"
            style="-fx-background-color: #4a9eff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" />
    </HBox>

    <TableView fx:id="tblGames" VBox.vgrow="ALWAYS"
        style="-fx-background-color: rgba(255, 255, 255, 0.05); -fx-background-radius: 10;">
        <columns>
            <TableColumn fx:id="colGameId" text="ID" prefWidth="70.0" />
            <TableColumn fx:id="colWhitePlayer" text="Người chơi trắng"
                prefWidth="200.0" />
            <TableColumn fx:id="colBlackPlayer" text="Người chơi đen"
                prefWidth="200.0" />
            <TableColumn fx:id="colGameMode" text="Chế độ" prefWidth="120.0" />
            <TableColumn fx:id="colGameStatus" text="Trạng thái" prefWidth="120.0" />
            <TableColumn fx:id="colWinner" text="Người thắng" prefWidth="180.0" />
        </columns>
    </TableView>
</VBox>