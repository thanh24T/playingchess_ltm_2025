<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="740.0" prefWidth="930.0" style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.chess_client.controllers.RegisterController">

        <VBox alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding>
                <Insets bottom="40" left="50" right="50" top="40" />
            </padding>

            <!-- Form đăng ký -->
            <VBox maxWidth="380" prefWidth="650" spacing="20.0" style="-fx-background-color: rgba(255, 255, 255, 0.05); -fx-background-radius: 15; -fx-padding: 30;">
                <effect>
                    <javafx.scene.effect.DropShadow color="#00000066" offsetY="5" radius="10" />
                </effect>
                <!-- Logo và tiêu đề -->
                <VBox alignment="CENTER" spacing="15.0">
                    <!-- Icon cờ vua (có thể thay bằng ImageView nếu có ảnh) -->
                    <Label style="-fx-font-size: 20px; -fx-text-fill: #f5f5f5;" text="TẠO TÀI KHOẢN" />
                </VBox>


                <!-- Full name field -->
                <VBox spacing="8.0">
                    <Label style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;" text="Họ và tên" />
                    <TextField fx:id="fullNameField" prefHeight="45.0" promptText="Nhập họ và tên đầy đủ" style="-fx-background-color: rgba(255, 255, 255, 0.1);                                      -fx-text-fill: #f5f5f5;                                      -fx-prompt-text-fill: #808080;                                      -fx-background-radius: 8;                                      -fx-border-radius: 8;                                      -fx-border-color: transparent;                                      -fx-font-size: 14px;                                      -fx-padding: 10;">
                    </TextField>
                </VBox>

                <!-- Email field -->
                <VBox spacing="8.0">
                    <Label style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;" text="Email" />
                    <TextField fx:id="emailField" prefHeight="45.0" promptText="example@email.com" style="-fx-background-color: rgba(255, 255, 255, 0.1);                                      -fx-text-fill: #f5f5f5;                                      -fx-prompt-text-fill: #808080;                                      -fx-background-radius: 8;                                      -fx-border-radius: 8;                                      -fx-border-color: transparent;                                      -fx-font-size: 14px;                                      -fx-padding: 10;">
                    </TextField>
                </VBox>

                <!-- Username field -->
                <VBox spacing="8.0">
                    <Label style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;" text="Tên đăng nhập" />
                    <TextField fx:id="usernameField" prefHeight="45.0" promptText="Tối thiểu 4 ký tự, chỉ chữ cái và số" style="-fx-background-color: rgba(255, 255, 255, 0.1);                                      -fx-text-fill: #f5f5f5;                                      -fx-prompt-text-fill: #808080;                                      -fx-background-radius: 8;                                      -fx-border-radius: 8;                                      -fx-border-color: transparent;                                      -fx-font-size: 14px;                                      -fx-padding: 10;">
                    </TextField>
                </VBox>

                <!-- Password field -->
                <VBox spacing="8.0">
                    <Label style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;" text="Mật khẩu" />
                    <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Tối thiểu 6 ký tự" style="-fx-background-color: rgba(255, 255, 255, 0.1);                                          -fx-text-fill: #f5f5f5;                                          -fx-prompt-text-fill: #808080;                                          -fx-background-radius: 8;                                          -fx-border-radius: 8;                                          -fx-border-color: transparent;                                          -fx-font-size: 14px;                                          -fx-padding: 10;">
                    </PasswordField>
                </VBox>

                <!-- Confirm password field -->
                <VBox spacing="8.0">
                    <Label style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;" text="Xác nhận mật khẩu" />
                    <PasswordField fx:id="confirmPasswordField" prefHeight="45.0" promptText="Nhập lại mật khẩu" style="-fx-background-color: rgba(255, 255, 255, 0.1);                                          -fx-text-fill: #f5f5f5;                                          -fx-prompt-text-fill: #808080;                                          -fx-background-radius: 8;                                          -fx-border-radius: 8;                                          -fx-border-color: transparent;                                          -fx-font-size: 14px;                                          -fx-padding: 10;">
                    </PasswordField>
                </VBox>


                <!-- Register button -->
                <Button fx:id="registerButton" maxWidth="Infinity" prefHeight="50.0" style="-fx-background-color: #4a9eff;                               -fx-text-fill: white;                               -fx-font-size: 16px;                               -fx-font-weight: bold;                               -fx-background-radius: 8;                               -fx-cursor: hand;" text="TẠO TÀI KHOẢN">
                    <VBox.margin>
                        <Insets top="15" />
                    </VBox.margin>
                </Button>

                <!-- Login link -->
                <HBox alignment="CENTER" spacing="5.0">
                    <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 13px;" text="Đã có tài khoản?" />
                    <Hyperlink fx:id="loginLink" style="-fx-text-fill: #4a9eff; -fx-font-size: 13px; -fx-font-weight: bold; -fx-underline: false;" text="Đăng nhập" />
                </HBox>

                <!-- Error/Success message -->
<!--                <Label fx:id="messageLabel" style="-fx-font-size: 12px;" textFill="#ff6b6b" visible="false" wrapText="true" />-->
            </VBox>


        </VBox>

</AnchorPane>
