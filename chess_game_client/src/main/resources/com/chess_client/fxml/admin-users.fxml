<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="viewUsers" spacing="15" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Tìm kiếm:" style="-fx-text-fill: #f5f5f5; -fx-font-size: 14px;" />
        <TextField fx:id="txtSearchUser" promptText="Nhập tên người dùng, email..."
            prefWidth="300.0"
            style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: #f5f5f5; -fx-prompt-text-fill: #888888; -fx-background-radius: 5;" />
        <Button fx:id="btnSearchUser" text="Tìm" prefWidth="80.0"
            style="-fx-background-color: #4a9eff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="lblStats"
            style="-fx-text-fill: #4a9eff; -fx-font-size: 14px; -fx-font-weight: bold;"
            text="Đang tải..." />
    </HBox>

    <TableView fx:id="tblUsers" VBox.vgrow="ALWAYS"
        style="-fx-background-color: rgba(255, 255, 255, 0.05); -fx-background-radius: 10;">
        <columns>
            <TableColumn fx:id="colUserId" text="ID" prefWidth="40.0" />
            <TableColumn fx:id="colUsername" text="Tên đăng nhập" prefWidth="100.0" />
            <TableColumn fx:id="colDisplayName" text="Tên hiển thị" prefWidth="150.0" />
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0" />
            <TableColumn fx:id="colPhone" text="Số điện thoại" prefWidth="100.0" />
            <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="80.0" />
            <TableColumn fx:id="colUserActions" text="Hành động" prefWidth="230.0" />
        </columns>
    </TableView>
</VBox>
